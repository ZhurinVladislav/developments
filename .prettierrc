{
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "tabWidth": 2,
        "singleQuote": true,
        "printWidth": 120
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "tabWidth": 4,
        "printWidth": 100
      }
    },
    {
      "files": ["*.sass"],
      "options": {
        "tabWidth": 2,
        "printWidth": 80
      }
    }
  ]
}
